<% if (error) { %>
  <div class="alert alert-danger text-center" role="alert"><%= error %></div>
<% } %>
<section class="container">
  <h3><%= artist.name %></h3>
  <ul class="list-inline">
    <li><a class="btn btn-primary" href="/artists/<%= artist._id %>/edit">Edit</a></li>
    <li>
      <form action="/artists/<%= artist._id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <button class="btn btn-danger">Delete</button>
      </form>
    </li>
  </ul>
  <h5>Releases</h5>
  <% album.forEach((album, i, original) => { %>
    <% if (i === 0) { %>
    <div class="row">
  <% }; %>
  <div class="col-md-4">
  <div class="thumbnail">
  <div class="caption">
  <img src=<%= album.artwork %> height="100">
  <p><a href='/albums/<%=album._id %>'><%= album.album_name %></a></p>
  <p><a href="/artists/<%= album.artist._id %>"><%= album.artist.name %></a></p>
  </div>
  </div>
  </div>
  <% if (i === original.length-1) { %>
    </div>
  <% }; %>
  <% }); %>
</section>
