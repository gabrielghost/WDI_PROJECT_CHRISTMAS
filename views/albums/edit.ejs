<% if (error) { %>
<div class="elert alert-danger text-center" role="alert"><%= error %></div>
<% } %>
<section class="container">
  <div class="album_info">
    <div class="form-group">
            <label for="artwork"></label>
        <input value='<%= album.artwork %>' type="text" class="form-control" id="artwork" name="album[artwork]" placeholder="artwork">
    </div>
  <form action="/albums/<%= album._id %>" method="post">
    <input type="hidden" name="_method" value="put">
  <div class="form-group">
          <label for="album_name"></label>
      <input type="text" value='<%= album.album_name %>' class="form-control" id="album_name" name="album[album_name]" placeholder="album name">
  </div>
   <div class="form-group">
     <label for="artist_name"></label>
     <select class="form-control" id="artist_name" name="album[name]">
       <% artists.forEach(artist => { %>
         <option value="<%= artist._id %>" <%= album.artist.toString() === artist._id.toString() ? "selected" : "" %>><%= artist.name %></option>
       <% }) %>
     </select>
   </div>
  <button type="submit" class="btn btn-primary" name="button">Update</button>
  </form>
    <form action="/albums/<%= album._id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button class="btn btn-danger">Delete</button>
    </form>
</div>
</section>
