<section class="container">
<h1>albums</h1>
<% albums.forEach((album, i, original) => { %>
  <% if (i === 0) { %>
  <div class="row">
<% }; %>
<div class="col-md-4">
<div class="thumbnail">
<div class="caption">
<img src=<%= album.artwork %> height="100">
<h3><%= album.album_name %></h3>
<h3><%= album.artist.name %></h3>
<h3><a href="/artists/<%= album.artist._id %>"><%= album.artist.name %></a></h3>
<p><a href='/albums/<%=album._id %>' class='btn btn-primary' role='button'>View</a></p>
<form action="/albums/<%= album._id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button class="btn btn-danger">Delete</button>
</form>
</div>
</div>
</div>
<% if (i === original.length-1) { %>
  </div>
<% }; %>
<% }); %>
</section>
